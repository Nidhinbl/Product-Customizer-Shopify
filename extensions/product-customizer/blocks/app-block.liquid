<div id="product-customizer-app"
  data-shop="{{ shop.permanent_domain }}"
  data-product="{{ product.id }}"
>
  <h2>{{ block.settings.heading }}</h2>
  <div id="customizer-root"></div>
</div>

{% schema %}
{
  "name": "Product Customizer",
  "target": "section",
  "stylesheet": ["app.css"],
  "javascript": ["app.js"],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Customize Your Product"
    }
  ]
}
{% endschema %} 