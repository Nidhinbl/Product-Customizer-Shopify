<div class="product-customizer"
     data-product-id="{{ product.id }}"
     data-shop-url="{{ shop.url }}">
  <div id="product-customizer-root"></div>
</div>

{% schema %}
{
  "name": "Product Customizer",
  "target": "section",
  "stylesheet": "product-customizer.css",
  "javascript": "product-customizer.js",
  "settings": [
    {
      "type": "text",
      "id": "custom_heading",
      "label": "Customizer Heading",
      "default": "Customize Your Product"
    }
  ],
  "presets": [
    {
      "name": "Product Customizer",
      "category": "Custom"
    }
  ]
}
{% endschema %}