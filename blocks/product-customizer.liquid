{% schema %}
{
  "name": "Product Customizer",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Product Customizer"
    },
    {
      "type": "select",
      "id": "position",
      "label": "Position",
      "options": [
        {
          "value": "before",
          "label": "Before Product Form"
        },
        {
          "value": "after",
          "label": "After Product Form"
        }
      ],
      "default": "before"
    }
  ],
  "presets": [
    {
      "name": "Product Customizer",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div id="product-customizer-root" 
     data-product-id="{{ product.id }}"
     data-shop-url="{{ shop.url }}">
</div> 